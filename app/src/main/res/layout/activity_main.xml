<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="niravitalzohar.smartlock.smartlock.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone2"
            android:layout_marginLeft="70dp"
            android:background="@drawable/circle_bt2"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lock"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_bt2"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/unlock"
            android:layout_marginLeft="200dp"
            android:background="@drawable/circle_bt2"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fprint"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/circle_bt2"

            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Logo"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/gray_circle"


            >

        </ImageView>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="50sp"
        android:textStyle="normal|bold|italic"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green6"
        android:layout_marginTop="10dp"

        />


    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap"
        android:layout_below="@id/welcome"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:typeface="serif"
        android:textSize="18sp" />


</LinearLayout>
