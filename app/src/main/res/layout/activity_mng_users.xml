
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MngUsers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage users"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/title_users"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="users"
        android:id="@+id/users"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/line1"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_below="@+id/users"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray7"
        android:layout_marginTop="10dp"
        >


    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/list"
        android:layout_below="@id/users"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="active manger"
        android:id="@+id/active_mng"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/line2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray7"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/active_mngName"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />


  <Button
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:background="@drawable/plus"
      android:layout_gravity="right"
      android:layout_marginTop="20dp"
      android:id="@+id/plusUser2"

      />


</LinearLayout>

