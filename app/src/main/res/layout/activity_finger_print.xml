<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finger_print"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1"
    tools:context="niravitalzohar.smartlock.smartlock.FingerPrint">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/orders"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/green6"
        android:maxLines = "8"
        android:scrollbars = "vertical"
        android:id="@+id/Instructions"


        android:fontFamily="sans-serif" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        >


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/finger"
        android:layout_marginLeft="20dp"
        android:id="@+id/add_fingerPrint"
        android:background="@drawable/circle_bt2"

        />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/trash"
        android:layout_marginLeft="120dp"
        android:id="@+id/remove_fingerPrint"
        android:background="@drawable/circle_bt2"


        />
    </LinearLayout>


</LinearLayout>
